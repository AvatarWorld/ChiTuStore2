page {
    
    width: 100%;
    height: 100%;
    position: absolute;

    .view {
        width: 100%;
        height: 100%;
        position: absolute;
        padding-top: 50px; 
    }

    .loading {
        width: 100%;
        height: 100%; 
        position: absolute;

        font-size: 120px;
        text-align: center;  
        padding-top: 80px;
        color: #bbb;
    }

    .error {
        width: 100%;
        height: 100%;
    }

    header {
        top: 0px;
        width: 100%;
        position: absolute;
        top: 0px;
    }

    footer {
        bottom: 0px;
        position: absolute;
        bottom: 0px;
    }
}